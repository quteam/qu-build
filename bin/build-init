#!/usr/bin/env node

const program = require('commander');
const path = require('path');
const chalk = require('chalk');
const ncp = require('ncp').ncp;

program
  .usage('<template-name> [project-name]')
  .option('<template> [project]', 'template: [vue]')
  .parse(process.argv);

function handleTemplate(_tplName, _prjName) {
  ncp(path.resolve(__dirname, `../template/${_tplName}`), path.resolve(process.cwd(), _prjName));
}

const tplName = program.args[0];
const prjName = program.args[1] || 'example';

if (!tplName) {
  console.error(chalk.red('\n  No template name.'));
  process.exit();
} else {
  handleTemplate(tplName, prjName);
}
