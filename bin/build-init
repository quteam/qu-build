#!/usr/bin/env node

const program = require('commander');
const path = require('path');
const chalk = require('chalk');
const ncp = require('ncp').ncp;

function handleTemplate(_tplName, _prjName) {
  ncp(path.resolve(__dirname, `../template/${_tplName}`), path.resolve(process.cwd(), _prjName));
  console.log(chalk.green('\n  Create project success.\n'));
}

program
  .usage('<template-name> <project-name>')
  .option('<template> <project>', 'template: [vue, pages]')
  .action(function (template, project) {
    if (template && template !== '[object Object]') {
      program.template = template;
    }
    if (project && project !== '[object Object]') {
      program.project = project;
    }
  })
  .parse(process.argv);

if (!program.template) {
  console.error(chalk.red('\n  No template name.\n'));
  process.exit();
} else if (!program.project) {
  console.error(chalk.red('\n  No project name.\n'));
  process.exit();
} else {
  handleTemplate(program.template, program.project);
}
